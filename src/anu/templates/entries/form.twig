{% extends 'layout/site.twig' %}
{% import "_includes/forms.twig" as forms %}


{% set fullPageForm = true %}
{% set controller = 'entryController' %}
{% set title = "Entries"|t %}
{% block headerButton %}
    <a ng-click="saveEntry();" class="btn waves-effect waves-light red lighten-2">{{ "Save Entry"|t }}</a>
{% endblock %}


{% block pageContent %}
    <div class="card">

        <div class="header">
            <h2>
                {% if entry.getIsNew() %}
                    {{ 'New Entry'|t }}
                {% else %}
                    {{ 'Edit Entry'|t }}
                {% endif %}
            </h2>
            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="body table-responsive">
            {% set fieldLayout = entry.getFieldLayout() %}
            {% set json = anu.getTemplate().addAnuJsObject(fieldLayout, 'fieldLayout') %}
            {{ includeJsObject(entry, 'entry') }}

            {% include '_includes/fieldLayout.twig' %}

            <field-layout layout="fieldLayout" element="element"></field-layout>

        </div>
    </div>

{% endblock %}


{% block details %}
    <div class="card">

        <div class="header">
            <h2>
                Details
            </h2>
        </div>
        <div class="body table-responsive">
        </div>
    </div>
{% endblock %}